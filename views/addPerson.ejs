<%- include('./include/header') %> 

<form action="/api/people/<%= roomId %> " class="container form-group mt-5" method="post">
    <label for="name" class="form-label">Name</label>
    <input type="text" id="name" class="form-control" name="name">

    <label for="feeOptions" class="form-label mt-3">Fee Status</label>
    <div label="feeOptions" class="input-group mb-2">
        <div class="form-check me-4">
            <input type="radio" class="form-check-input" name="feeStatus" value="true" id="feeOption1">
            <label for="feeOption1" class="form-check-label">Paid</label>
        </div>

        <div class="form-check">
            <input type="radio" class="form-check-input" name="feeStatus" value="false" id="feeOption2" checked>
            <label for="feeOption2" class="form-check-label">Pending</label>
        </div>
    </div>
    
    <input type="submit" class="btn btn-primary mt-2" value="Add">
</form>

<%- include('./include/footer') %> 